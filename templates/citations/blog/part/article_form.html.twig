{% block stylesheets %}

{% endblock %}

<div class="col-10 offset-1">
    {{ form_start(form, {'attr': {'class': 'form_add_article'}}) }}
    <div class="form-group">
        {{ form_label(form.title, 'L\'image mise en avant de l\'article') }}
        {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.slug, 'Le slug de votre article') }}
        {{ form_widget(form.slug, {'attr': {'placeholder': 'Slug de l\'article', 'class': 'form-control'}}) }}
        <span class="error text-danger">{{ form_errors(form.slug) }}</span>

    </div>

    <div class="form-group">
        {{ form_label(form.title, 'Le titre de votre article') }}
        {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article', 'class': 'form-control'}}) }}
        <span class="error text-danger">{{ form_errors(form.title) }}</span>

    </div>

    <div class="form-group">
        {{ form_label(form.title, 'Cat√©gories de l\'article') }}
        {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}

    </div>

    <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control mytextarea', 'placeholder': 'Le contenu de l\'article'}}) }}
    </div>

    <div class="form-group">
        <p>
            <label>
                {{ form_widget(form.isPublished, {'attr': {'class': 'form-control'}}) }}
                <span>Publier</span>
            </label>
        </p>
    </div>

    <div class="form-group">
        <input type="submit" name="" value="Enregistrer" class="btn btn-primary">
    </div>
    {{ form_end(form) }}
</div>
{% block javascripts_bottom %}
    <script src="https://cdn.tiny.cloud/1/y3wr83g9hzc1vkgthhtgmmz1wjvqisodlk6vbvsw53g3i8p2/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '.mytextarea',
            height: 700,
            menubar: false,
            convert_urls: false,
            plugins: [
                'advlist autolink lists link image charmap print preview anchor',
                'searchreplace visualblocks code fullscreen',
                'insertdatetime media table paste code help wordcount'
            ],
            toolbar: 'undo redo | formatselect | ' +
                ' bold italic backcolor | alignleft aligncenter ' +
                ' alignright alignjustify | bullist numlist outdent indent |' +
                ' removeformat | help | fontsizeselect link image | code',
            images_upload_base_path: '/uploads',
            images_upload_url: '/blog/uploadImage',
            automatic_uploads: true
        });
    </script>
{% endblock %}
