{% extends 'base.html.twig' %}

{% block meta_title %}
    <title>Inscrivez-vous - Citation-inspiration.com</title>
    <meta property="og:title" content="Inscrivez-vous - Citation-inspiration.com">
    <meta name="description" content="Inscrivez-vous et vous aurez alors la possibilité de créer vos propre citation">
    <meta property="og:description" content="Inscrivez-vous et vous aurez alors la possibilité de créer vos propre citation">
    <meta property="og:image" content="https://citation-inspiration.com{{ asset('build/logo.png') }}">
{% endblock %}

{% block body %}
    <div class="col-10 offset-1">
        <h1 class="text-center">Inscription</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'form_register'}}) }}
        <div class="form-group">
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email', 'class': 'form-control'}}) }}
            <span class="error">{{ form_errors(registrationForm.email) }}</span>
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur', 'class': 'form-control'}}) }}
            <span class="error">{{ form_errors(registrationForm.username) }}</span>
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}}) }}
            <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
        </div>
        <div class="form-group">
            <input type="submit" name="" class="btn btn-primary form-control" value="M'inscrire">
        </div>
        {{ form_end(registrationForm) }}
    </div>
    <div class="row">
        <img src="http://citation-inspiration.com/image/Bienvenue%20%C3%A0%20Zombieland-5a300b1c40f80.png" alt="Image de bienvenue" width="300px" style="margin: 30px auto;">
    </div>
{% endblock %}
